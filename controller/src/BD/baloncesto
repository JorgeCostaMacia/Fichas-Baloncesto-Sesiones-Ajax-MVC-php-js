create table jugadores(
	id SMALLINT NOT NULL AUTO_INCREMENT,
	nombre CHAR(30) NOT NULL,
	posicion CHAR(30) DEFAULT 'base',
	partidos	SMALLINT default 0,
	puntos DECIMAL(10,1) default 0,
	rebotes DECIMAL(10,1) default 0,
	asistencias DECIMAL(10,1) default 0,
   CONSTRAINT PK_JUGADORES PRIMARY KEY (id)
)ENGINE=InnoDB;

CREATE TABLE usuarios (
    loginUsser CHAR(30) NOT NULL,
    passUsser CHAR(30) DEFAULT 'defaultpass',
    CONSTRAINT PK_USUARIO PRIMARY KEY (loginUsser)
)ENGINE=InnoDB;

